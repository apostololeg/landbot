.Button
    appearance none
    padding 15px 20px
    cursor pointer
    background-color #fff
    border 0
    border-radius 30px
    box-shadow 0 1px 2px rgba(0,0,0,0.3)
    transition .2s ease-out
    transition-roperty background-color, transform
    text-transform uppercase
    color #333
    outline none
    font-size 100%

    &:hover
        transform scale(1.02)

    &_action
        color #fff
        background-color #55b55f
        box-shadow 0 1px 7px rgba(0,0,0,0.1)
        text-shadow 0 1px 0 rgba(0,0,0,.3)

        &:hover
            background-color #5dc568

    & + &
        margin-left 10px
